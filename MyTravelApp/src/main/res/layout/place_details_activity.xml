<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:text="Mugla" />

            <TextView
                android:id="@+id/detail_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="This is just an information" />

            <ImageView
                android:id="@+id/detail_imageview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/cardview_light_background" />

            <ImageView
                android:id="@+id/detail_imageview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/cardview_light_background" />

            <ImageView
                android:id="@+id/detail_imageview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/cardview_light_background" />

            <ImageView
                android:id="@+id/detail_imageview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/cardview_light_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>